<?xml version="1.0" encoding="UTF-8"?>

<cxViewRoot cxView.fill="0,0,0,0">
    
    <fcMap id="map" />
    
    <cxButton cxView.size="fcButtonSize()" cxView.bottom="0" cxView.left="0"
        cxButton.onRelease="fcMapSetEditMode()"
        cxButton.onEnter="cxEventAction({'src':'actions.xml?btnEnter','cache':true})"
        cxButton.onLeave="cxEventAction({'src':'actions.xml?btnLeave','cache':true})"
        cxSprite.texture="item.xml?edit-mode.png">
    </cxButton>
    
    <cxButton cxView.size="fcButtonSize()" cxView.bottom="0" cxView.right="0"
        cxButton.onRelease="fcMapSetFireMode()"
        cxButton.onEnter="cxEventAction({'src':'actions.xml?btnEnter','cache':true})"
        cxButton.onLeave="cxEventAction({'src':'actions.xml?btnLeave','cache':true})"
        cxSprite.texture="item.xml?fire-mode.png">
    </cxButton>
    
</cxViewRoot>
